doctype html
html(lang="ja")
  head
    title Lattendance
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet")
    link(rel="stylesheet",
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css",
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk",
    crossorigin="anonymous")
  body
    nav.navbar.navbar-light.bg-light
      a(href="/").navbar-brand.nav-link Lattendance
      ul.navbar-nav
        if user
          li.nav-item.dropdown
            a(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false").nav-link.dropdown-toggle #{user.username}
            div(aria-labelledby="dropdownMenuButton").dropdown-menu.dropdown-menu-right
              a(href="/logout").dropdown-item ログアウト
        else if !login_page
          li.nav-item
            a(href="/login").nav-link ログイン
    div.container
      block content
    script(src="/javascripts/bundle.js")
