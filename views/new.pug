extends layout

block content
  h3.my-3 予定の作成
  form(method="post", action="/schedules").my-3
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="scheduleName") 予定名：
      input(type="text", name="scheduleName").form-control
    div.form-group
      label(for="description") 説明：
      textarea(name="description").form-control
    div.form-group
      label(for="dates") 日程（改行で11/1, 11/16のような形式で）：
      textarea(name="dates", rows="5").form-control
    button(type="submit").btn.btn-primary 作成